{
    "name": "bear/skeleton",
    "type": "project",
    "license":"MIT",
    "description": "Skeleton application for BEAR.Sunday",
    "require": {
        "php": "^7.0",
        "roave/security-advisories": "dev-master",
        "bear/package": "^1.7.2",
        "josegonzalez/dotenv": "^3.2"
    },
    "require-dev": {
        "bear/qatools": "^1.4.9"
    },
    "autoload": {
        "psr-4": {
            "BEAR\\Skeleton\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BEAR\\Skeleton\\": "tests/"
        }
    },
    "scripts" :{
        "pre-update-cmd": "BEAR\\Skeleton\\Composer::install",
        "post-create-project-cmd": [
            "composer dump-autoload"
        ],
        "test": ["phpunit", "@cs"],
        "coverage": ["php -dzend_extension=xdebug.so ./vendor/bin/phpunit --coverage-text --coverage-html=build/coverage"],
        "cs": ["php-cs-fixer fix -v --dry-run", "phpcs --standard=./phpcs.xml src"],
        "cs-fix": ["php-cs-fixer fix -v", "phpcbf src"],
        "serve": "php -dzend_extension=xdebug.so -S 127.0.0.1:8080 -t public",
        "api": "php bootstrap/api.php",
        "web": "php bootstrap/web.php"
    }
}
