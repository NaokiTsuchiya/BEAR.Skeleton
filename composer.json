{
    "name": "bear/skeleton",
    "description": "Skeleton application for BEAR.Sunday",
    "license":"MIT",
    "require": {
        "php": ">=5.5.0",
        "bear/package": "~1.0"
    },
    "require-dev": {
        "composer/composer": ">=1.0.0-alpha10",
        "phpunit/phpunit": "~4.8",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "BEAR\\Skeleton\\": "src/"
        }
    },
    "scripts" :{
        "pre-install-cmd": ["BEAR\\Skeleton\\Installer::preInstall"],
        "post-install-cmd": [
            "BEAR\\Skeleton\\Installer::postInstall",
            "./vendor/bin/composer dump-autoload"
        ]
    }
}
